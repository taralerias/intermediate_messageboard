<h1>New Post</h1>

<%= form_for @post, :url => { :action => "create" } do |f| %>
	<p><%=f.label :title, "Title" %>
	   <%=f.text_field :title %> </p>
	<p><%=f.label :content, "Content" %>
	   <%=f.text_field :content, :size => "60x12" %> </p>  
	 <br><%=f.submit "Create" %> </br>
	<% end %>

<%= link_to 'Back', post_index_path %>